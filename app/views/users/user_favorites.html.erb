    </nav>
  </div>
  <div class="fav-list">   
      <br>
      <br>
  <ul>
      <% @user.favorites.each do |f| %>
        
        <img src=<%= f.car.image %>
        width= "400";
        height= "235"><br>
        <br>
        <li>
          <%= f.car.make  %> <br>
          <%= f.car.model %>
          <br>
          <br>
          <br>
          </li>
      <% end %>
  </ul>
   
  </div>
</div>

