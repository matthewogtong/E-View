<h1>Create An Account</h1>

<%= form_for @user do |f| %>
    <% if flash[:user_errors]  %>
        <% flash[:user_errors].each do |error| %>
            <p><%= error %>
        <% end %>
    <% end %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>

    <%= f.label :username %><br>
    <%= f.text_field :username %><br>

    <%= f.label :password %><br>
    <%= f.password_field :password %><br>

    <%= f.label :age %><br>
    <%= f.number_field :age %><br>
    <br>
    <br>


    <%= f.submit %>



<% end %>

<%= link_to 'Back to Home', home_main_path %>