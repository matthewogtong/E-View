<div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4">All Reviews for <%= @car.make_plus_model %> </h1>
      <p class="lead"></p>
    </div>
  </div>

<div class= "car-review-show">


<% @car.reviews.each do |review| %>
    <li>
    <%= link_to 'View this Review', review_path(review.id) %>
    <br><b>Review Content: </b><%= review.content %>
    <br><b>Rating: </b><%= review.rating %>
    <br><b>Number of Likes: </b><%= review.likes %>
    <br><b>Author: </b><%= review.user.name %>
    </li>
    <br>
    <br>
<% end %>

<%= link_to 'Return to Car Show Page', car_path(@car) %>


</div>